#include<iostream>
using namespace std;

int main() {
	// Write your code here
	int n, c;
    int sum =0;
    int fact =1;
    cin>>n>>c;
    if(c==1){
		sum = n*(n+1)/2;	
        cout<<sum;
    }
    else if(c==2){
        for(int i=1;i<=n;i++){
            fact = fact*i;
        
        }
        cout<<fact;
    }
    else{
        cout<<"-1";
    }
}
