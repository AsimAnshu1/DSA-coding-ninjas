#include <iostream>
using namespace std;
int main() {
    int n;
    cin>>n;
    int count =-1;
    for(int i=1;i<=n;i++){
        for(int j=n-i;j>0;j--){
           cout<<" "; 
        }
        for(int j=0;j<i;j++){
			cout<<i+j;
        }

        for(int j=i;j>1;j--){
            cout<<j+count;
        }
        count++;
        cout<<endl;
    }   
}
